        </dependency>
        <dependency>
            <groupId>no.lau.vdvil</groupId>
            <artifactId>common-test</artifactId>
            <version>${vdvil.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib</artifactId>
