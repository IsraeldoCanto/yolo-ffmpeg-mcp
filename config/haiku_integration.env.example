# Haiku Subagent Integration Configuration
# Copy this to .env and configure your settings

# =============================================================================
# üß† HAIKU AI CONFIGURATION
# =============================================================================

# Anthropic API Key for Claude Haiku model
# Get from: https://console.anthropic.com/
# Cost: ~$0.02-0.05 per video analysis
ANTHROPIC_API_KEY=your_api_key_here

# =============================================================================
# üí∞ COST MANAGEMENT SETTINGS
# =============================================================================

# Daily spending limit for AI analysis (USD)
# Recommended: $5.00 (allows 100-250 analyses per day)
HAIKU_DAILY_LIMIT=5.00

# Per-analysis cost limit (USD)
# Safety net to prevent expensive analyses
HAIKU_PER_ANALYSIS_LIMIT=0.10

# Enable cost tracking and limits
HAIKU_COST_TRACKING_ENABLED=true

# =============================================================================
# üöÄ PROCESSING PREFERENCES
# =============================================================================

# Enable AI-powered processing decisions
# Set to false to use heuristic fallback only
HAIKU_AI_ENABLED=true

# Enable fallback processing when AI unavailable/over budget
# Recommended: true for production reliability
HAIKU_FALLBACK_ENABLED=true

# Default processing strategy when AI disabled
# Options: STANDARD_CONCAT, CROSSFADE_CONCAT, KEYFRAME_ALIGN, NORMALIZE_FIRST
HAIKU_DEFAULT_STRATEGY=CROSSFADE_CONCAT

# =============================================================================
# üéØ SMART CONCAT SETTINGS
# =============================================================================

# Crossfade duration for frame alignment fixes (seconds)
CROSSFADE_DURATION=0.1

# Force keyframes every N seconds for alignment
KEYFRAME_INTERVAL=2.0

# Default video normalization resolution
NORMALIZE_RESOLUTION=1920x1080

# Default frame rate for normalization
NORMALIZE_FRAMERATE=30

# =============================================================================
# üìä LOGGING AND MONITORING
# =============================================================================

# Log AI analysis decisions and reasoning
HAIKU_LOG_DECISIONS=true

# Log cost tracking information
HAIKU_LOG_COSTS=true

# Log processing time comparisons
HAIKU_LOG_PERFORMANCE=true

# =============================================================================
# üîß DEVELOPMENT SETTINGS
# =============================================================================

# Use development/testing API endpoints
HAIKU_DEVELOPMENT_MODE=false

# Mock AI responses for testing (no API calls)
HAIKU_MOCK_MODE=false

# Cache analysis results to avoid repeat API calls
HAIKU_CACHE_ANALYSIS=true

# Cache TTL in seconds (how long to cache results)
HAIKU_CACHE_TTL=3600

# =============================================================================
# üõ°Ô∏è SECURITY SETTINGS
# =============================================================================

# Maximum file size to analyze (MB)
# Prevents expensive analysis of huge files
HAIKU_MAX_FILE_SIZE_MB=1000

# Maximum number of files to analyze at once
HAIKU_MAX_FILES_PER_ANALYSIS=10

# Timeout for AI API calls (seconds)
HAIKU_API_TIMEOUT=30

# =============================================================================
# INTEGRATION EXAMPLES
# =============================================================================

# Example daily budgets:
# - Light usage (5-10 videos/day): $0.50
# - Medium usage (25-50 videos/day): $2.00  
# - Heavy usage (100+ videos/day): $5.00
# - Production workload: $10.00+

# Example use cases:
# - Content creator workflow: CROSSFADE_CONCAT for smooth transitions
# - Archive processing: NORMALIZE_FIRST for consistent output
# - Quick edits: STANDARD_CONCAT for speed
# - Professional editing: KEYFRAME_ALIGN for perfect timing